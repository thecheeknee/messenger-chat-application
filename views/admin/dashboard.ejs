<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" integrity="sha512-Oy+sz5W86PK0ZIkawrG0iv7XwWhYecM3exvUtMKNJMekGFJtVAhibhRPTpmyTj8+lJCkmWfnpxKgT2OopquBHA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="custom.css" rel="stylesheet" />

    <title>Customer Support Chat: Admin Dashboard</title>
  </head>
  <body>
    <%- include('../common/header', {agentName: name}) %>
    <div class="w-100 p-3 bg-secondary">
      <div class="container">
        <p class="alert alert-info d-none" id="logoutSuccess">Successfully Logged out. Redirecting to login page...</p>
        <p class="alert alert-info d-none" id="logoutFail">Some error occurred. Redirecting to login page...</p>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link page-tab text-dark" aria-current="page" id="adminMasterTab" data-id="adminMaster" href="#adminMaster"><i class="bi bi-gear-fill"></i> Global Settings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link page-tab text-dark active" aria-current="page" id="chatMasterTab" data-id="chatMaster" href="#chatMaster"><i class="bi bi-chat-left-dots-fill"></i> Chat History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link page-tab text-white" data-id="presetMaster" id="presetMasterTab" href="#presetMaster"><i class="bi bi-chat-left-text-fill"></i> Manage Presets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link page-tab text-white" data-id="userMaster" id="userMasterTab" href="#userMaster"><i class="bi bi-person-badge-fill"></i> Manage Agents</a>
          </li>
        </ul>
      </div>
      <div class="w-100 bg-light rounded">
        <div class="tab-data d-none ps-2 pe-2" id="adminMaster">
          <%- include('admin') %>
        </div>
        <div class="tab-data current w-100 ps-2 pe-2" id="chatMaster">
          <%- include('chats') %>
        </div>
        <div class="tab-data d-none ps-2 pe-2" id="presetMaster">
          <%- include('presets') %>
        </div>
        <div class="tab-data d-none ps-2 pe-2" id="userMaster">
          <%- include('users') %>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
      var userName = '<%= userName %>';
      var apiUrl = '<%= server_path %>';
      var agentName = '<%= name %>';
    </script>
    <script src="account.js"></script>
    <script src="admin-dashboard.js"></script>
  </body>
</html>