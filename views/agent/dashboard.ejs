<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" integrity="sha512-Oy+sz5W86PK0ZIkawrG0iv7XwWhYecM3exvUtMKNJMekGFJtVAhibhRPTpmyTj8+lJCkmWfnpxKgT2OopquBHA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="custom.css" rel="stylesheet" />

    <title>Customer Support Chat: Agent Dashboard</title>
  </head>
  <body>
    <%- include('../common/header', {agentName: name}) %>
    <div class="w-100 p-3 bg-secondary">
      <p class="alert alert-info d-none" id="logoutSuccess">Successfully Logged out. Redirecting to login page...</p>
      <p class="alert alert-info d-none" id="logoutFail">Some error occurred. Redirecting to login page...</p>
      <div class="row">
        <%- include('chats', {userName: userName}) %>
        <div class="col-md-4 col-sm-12">
          <div class="card mb-3 bg-light">
            <div class="card-header">
              Incoming Chat Requests
            </div>
            <div class="card-body" id="newCustAlert"></div>
          </div>
          <%- include('presets', {userName: userName}) %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var userName = '<%= userName %>';
      var apiUrl = '<%= server_path %>';
      var agentName = '<%= name %>';
      var socket;
    </script>
    <script src="account.js"></script>
    <script src="agent-dashboard.js"></script>
  </body>
</html>