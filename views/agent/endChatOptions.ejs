<!--not responsive modal-->
<div class="modal fade" id="customerNotResponsiveModal" aria-hidden="true" aria-labelledby="customerNotResponsiveModalLabel" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="customerNotResponsiveModalLabel">Customer Inactive</h5>
      </div>
      <div class="modal-body">
        <p>Do you want to wait for some time instead? The customer may be facing a network issue</p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Ok I will wait</button>
        <button id="customerNotResponsiveBtn" data-parent="customerNotResponsiveModal" class="btn btn-primary end-chat-btn">No, End Chat</button>
      </div>
    </div>
  </div>
</div>
<!--customer ended modal-->
<div class="modal fade" id="customerEndedModal" aria-hidden="true" aria-labelledby="customerEndedModalLabel" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="customerEndedModalLabel">Chat has ended</h5>
      </div>
      <div class="modal-body">
        <p class="lead">Please end this chat only after the customer has provided the rating. In case the customer has already ended from their end, select one of the options below.</p>
        <p class="alert alert-warning d-none">Please select one of the options below</p>
        <div class="row">
          <div class="col">
            <div class="w-100">
              <input class="btn-check" type="radio" name="customerEndedOptions" id="customerEnded1" autocomplete="off" value="eID was provided to the customer">
              <label class="btn btn-secondary justify-content-between align-items-center" for="customerEnded1">
                <i class="bi bi-hand-thumbs-up-fill"></i>
                <p>eID was provided to the customer</p>
              </label>
            </div>
          </div>
          <div class="col">
            <div class="w-100">
              <input class="btn-check" type="radio" name="customerEndedOptions" id="customerEnded2" autocomplete="off" value="SRT was provided to the customer">
              <label class="btn btn-secondary justify-content-between align-items-center" for="customerEnded2">
                <i class="bi bi-hand-thumbs-up-fill"></i>
                <p>SRT was provided to the customer</p>
              </label>
            </div>
          </div>
          <div class="col">
            <div class="w-100">
              <input class="btn-check" type="radio" name="customerEndedOptions" id="customerEnded3" autocomplete="off" value="Resolution was not provided">
              <label class="btn btn-secondary justify-content-between align-items-center" for="customerEnded3">
                <i class="bi bi-hand-thumbs-down-fill"></i>
                <p>No Resolution was provided</p>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="customerEndedBtn" data-parent="customerEndedModal" class="btn btn-primary end-chat-btn">End Chat</button>
      </div>
    </div>
  </div>
</div>
<!--fake chat modal-->
