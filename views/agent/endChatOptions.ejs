  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fakeRequestModalLabel">Fake Request</h5>
      </div>
      <div class="modal-body">
        <p class="alert alert-warning d-none">Please select one of the options below to help us understand the resolution</p>
        <div class="row">
          <div class="col">
            <div class="w-100">
              <input class="btn-check" type="radio" name="fakeRequestOptions" id="fakeRequest1" autocomplete="off" value="This does not appear to be a real person">
              <label class="btn btn-secondary justify-content-between align-items-center" for="fakeRequest1">
                <i class="bi bi-robot"></i>
                <p>This does not appear to be a real person</p>
              </label>
            </div>
          </div>
          <div class="col">
            <div class="w-100">
              <input class="btn-check" type="radio" name="fakeRequestOptions" id="fakeRequest2" autocomplete="off" value="This is a real person but does not have a valid issue">
              <label class="btn btn-secondary justify-content-between align-items-center" for="fakeRequest2">
                <i class="bi bi-person-x-fill"></i>
                <p>This is a real person but does not have a valid issue</p>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="fakeRequestBtn" data-parent="fakeRequestModal" class="btn btn-primary end-chat-btn">End Chat</button>
      </div>
    </div>
  </div>
</div>